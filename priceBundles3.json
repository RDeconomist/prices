{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
  "text": "Unavoidable at the bottom",
  "subtitle": ["Average inflation rates, conusumer price baskets",""],
  "subtitleFontStyle":"italic",
  "subtitleFontSize":10,
  "anchor": "start",
  "color": "black"},

  "config": {
    "background":"#ffffff",
    "view": {
      "stroke": "transparent"}},

  "width":300,
  "height":300,

  "data": {
      "url": "https://raw.githubusercontent.com/RDeconomist/prices/master/db_CPIbyPercetile.csv"},

  "mark":{
      "type": "bar",    
      "color":"#00BFFF",
      "width": 20,
      "strokeWidth":2,
      "opacity":1},

    "encoding": {
      "x": {
        "field": "percentile",
        "type": "quantitative",
        "title":null,
        "axis":{"grid": false}          
        },

      "y": {
        "field": "infl",             
        "type": "quantitative",
        "aggregate":"mean",
        "title":null,
        "scale":{"domain":[0, 15]},
        "axis":{"grid": false}
      },

      "facet": {
        "field": "period",                
        "type": "ordinal",
        "title":null
      }}}
    
    
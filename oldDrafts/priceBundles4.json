{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
  "text": "Consumer bundles, price, 1988-2022",
  "subtitle": "Price of consumer items, by decile, 1988-2022",
  "subtitleFontStyle":"italic",
  "subtitleFontSize":10,
  "anchor": "start",
  "color": "black"},

  "config": {
    "background":"#ffffff",
    "view": {
      "stroke": "transparent"}},

  "width":300,
  "height":40,

  "data": {
      "url": "https://raw.githubusercontent.com/RDeconomist/prices/master/prices_440105.csv"},



  "mark":{
      "type": "bar",    
      "color":"#00BFFF",
      "width": 5,
      "strokeWidth":2,
      "opacity":1},

      "encoding": {
        "x": {
          "bin": {
            "step": 1
          },
          "field": "price",
          "title":null,
          "axis":{"grid": false}          
          },

        "y": {
          "aggregate":"count",
          "title":null,
          "axis":{"grid": false}   
          },        

        "facet":{
          "field":"year",
          "columns": 1},

        "color":{
          "field":"price",
          "type": "quantitative",
          "scale":{"scheme":"viridis"},
          "legend":null}
          
      }
}
      


    
    